<%- include("partials/header.ejs") %>
<center>
  <h1>Joke of the Day</h1>
  <p><%= joke.joke %></p>
</center>
<h1>Home</h1>
<%= startContent %>

<% posts.forEach((post)=>{  %>
<h1><%=post.title %></h1>
<% if(post.content.length!=undefined && post.content.length<100) {%>
  <p><%= post.content%></p>
  <% }else{ %>
<p><%= post.content.substring(0, 100)+'....' %>
  <a href="/posts/<%=post._id%>" >Read More</a>
</p>
<% } %>


<form action="/delete" method="post">
<button class="btn btn-primary"  type="submit" name="id" value="<%=post._id%>" formaction="/compose" formmethod="get">Edit</button>
<button class="btn btn-danger" type="submit" name="id" value="<%=post._id%>">Delete</button>
</form>
<%})%>
<%- include("partials/footer.ejs") %>
